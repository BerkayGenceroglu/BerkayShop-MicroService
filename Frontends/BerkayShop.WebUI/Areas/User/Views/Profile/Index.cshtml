@model UserDetailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i> Profil Bilgilerim</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Kullanıcı ID:</div>
                        <div class="col-sm-8 text-dark">@Model.Id</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Kullanıcı Adı:</div>
                        <div class="col-sm-8 text-dark">@Model.Username</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Ad Soyad:</div>
                        <div class="col-sm-8 text-dark">@Model.Name @Model.Surname</div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">E-posta Adresi:</div>
                        <div class="col-sm-8 text-dark">@Model.Email</div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="/User/Profile/Edit" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Bilgileri Güncelle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>