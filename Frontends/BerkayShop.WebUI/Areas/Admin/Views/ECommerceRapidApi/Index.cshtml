@model RapidApiProductModel.Data
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/Admin/Views/AdminUILayout/UILayout.cshtml";
}

<style>
    .search-container {
        background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
        padding: 30px 20px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 10px 40px rgba(59, 130, 246, 0.3);
    }

        .search-container h2 {
            color: white;
            font-weight: 600;
            margin-bottom: 20px;
            text-align: center;
            font-size: 2rem;
        }

    .search-form {
        max-width: 500px;
        margin: 0 auto;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .search-input {
        flex: 1;
        min-width: 250px;
        padding: 15px 20px;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .search-input:focus {
            outline: none;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }

    .search-btn {
        padding: 15px 40px;
        background: #fbbf24;
        border: none;
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(251, 191, 36, 0.3);
    }

        .search-btn:hover {
            background: #f59e0b;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(251, 191, 36, 0.4);
        }

    .results-header {
        text-align: center;
        margin: 40px 0;
        padding: 20px;
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        border-radius: 15px;
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        box-shadow: 0 5px 20px rgba(251, 191, 36, 0.4);
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
        margin: 40px 0;
        padding: 0 20px;
    }

    .product-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

    .product-image {
        width: 100%;
        height: 280px;
        object-fit: cover;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: relative;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            padding: 20px;
        }

    .product-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.95);
        padding: 8px 15px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 5px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .star-icon {
        color: #fbbf24;
        font-size: 1rem;
    }

    .product-content {
        padding: 25px;
    }

    .product-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 12px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.4;
        min-height: 2.8em;
    }

    .product-description {
        font-size: 0.9rem;
        color: #6b7280;
        margin-bottom: 20px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.6;
        min-height: 4.8em;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding-top: 20px;
        border-top: 2px solid #f3f4f6;
    }

    .detail-row {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b7280;
        min-width: 60px;
    }

    .detail-value {
        font-size: 0.9rem;
        color: #1f2937;
        font-weight: 500;
    }

    .color-badge {
        display: inline-block;
        padding: 5px 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .product-price {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 5px;
    }

    .no-results {
        text-align: center;
        padding: 80px 20px;
        color: #6b7280;
    }

    .no-results-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    @@media (max-width: 768px) {
        .products-grid {
            grid-template-columns: 1fr;
        }

        .search-form {
            flex-direction: column;
        }

        .search-input {
            min-width: 100%;
        }
    }
</style>

<div class="container-custom">
    <div class="search-container">
        <h2> Ürün Ara</h2>
        <form method="post" class="search-form">
            <input type="text" name="product" class="search-input" placeholder="Aradığınız ürünün adını yazın..." required />
            <button type="submit" class="search-btn">Ara</button>
        </form>
    </div>

    @if (Model != null && Model.products != null && Model.products.Any())
    {
        <div class="results-header">
             @Model.products.Count() Ürün Bulundu
        </div>

        <div class="products-grid">
            @foreach (var product in Model.products)
            {
                <div class="product-card">
                    <div class="product-image">
                        @if (product.product_photos != null && product.product_photos.Any())
                        {
                            <img src="@product.product_photos.FirstOrDefault()" alt="@product.product_title" />
                        }
                        else
                        {
                            <img src="/images/no-image.png" alt="Resim Yok" />
                        }

                        @if (product.product_rating != null)
                        {
                            <div class="product-badge">
                                <span class="star-icon">⭐</span>
                                <span>@product.product_rating</span>
                            </div>
                        }
                    </div>

                    <div class="product-content">
                        <h3 class="product-title">@product.product_title</h3>

                        @if (product.product_description != null)
                        {
                            <p class="product-description">@product.product_description</p>
                        }

                        <div class="product-details">
                            @if (product.current_product_variant_properties != null && product.current_product_variant_properties.Color != null)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Renk:</span>
                                    <span class="color-badge">@product.current_product_variant_properties.Color</span>
                                </div>
                            }

                            @if (product.offer != null && product.offer.price != null)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Fiyat:</span>
                                    <span class="product-price">@product.offer.price ₺</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model != null)
    {
        <div class="no-results">
            <div class="no-results-icon">😔</div>
            <h3>Üzgünüz, hiç sonuç bulunamadı</h3>
            <p>Lütfen farklı bir arama terimi deneyin</p>
        </div>
    }
</div>
