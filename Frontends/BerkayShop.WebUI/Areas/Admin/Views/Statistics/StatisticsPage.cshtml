@{
    ViewData["Title"] = "StatisticsPage";
    Layout = "~/Areas/Admin/Views/AdminUILayout/UILayout.cshtml";
}

<style>
    .media-box {
        min-height: 140px;
        display: flex;
        align-items: center;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .media-info {
        flex: 1;
        overflow: hidden;
    }

        .media-info h5 {
            font-size: 13px;
            margin-bottom: 10px;
            line-height: 1.3;
            height: 34px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            color: #666;
        }

        .media-info h3 {
            font-size: 20px;
            margin: 0;
            line-height: 1.2;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            word-break: break-word;
            color: #333;
            font-weight: 600;
        }

    .media-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
        font-size: 28px;
        border-radius: 50%;
    }

    /* Satır 1 & 2 Renkleri */
    .bg-purple {
        background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
    }

        .bg-purple .media-icon {
            background: #9c27b0;
            color: #fff;
        }

    .bg-orange {
        background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
    }

        .bg-orange .media-icon {
            background: #ff9800;
            color: #fff;
        }

    .bg-blue {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    }

        .bg-blue .media-icon {
            background: #2196f3;
            color: #fff;
        }

    .bg-green {
        background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    }

        .bg-green .media-icon {
            background: #4caf50;
            color: #fff;
        }

    .bg-red {
        background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
    }

        .bg-red .media-icon {
            background: #f44336;
            color: #fff;
        }

    .bg-teal {
        background: linear-gradient(135deg, #e0f2f1 0%, #b2dfdb 100%);
    }

        .bg-teal .media-icon {
            background: #009688;
            color: #fff;
        }

    .bg-indigo {
        background: linear-gradient(135deg, #e8eaf6 0%, #c5cae9 100%);
    }

        .bg-indigo .media-icon {
            background: #3f51b5;
            color: #fff;
        }

    .bg-pink {
        background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%);
    }

        .bg-pink .media-icon {
            background: #e91e63;
            color: #fff;
        }

    /* Satır 3 Renkleri */
    .bg-cyan {
        background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
    }

        .bg-cyan .media-icon {
            background: #00bcd4;
            color: #fff;
        }

    .bg-yellow {
        background: linear-gradient(135deg, #fff9c4 0%, #fff59d 100%);
    }

        .bg-yellow .media-icon {
            background: #ffc107;
            color: #fff;
        }

    .bg-dark {
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    }

        .bg-dark .media-icon {
            background: #607d8b;
            color: #fff;
        }

    .bg-lime {
        background: linear-gradient(135deg, #f1f8e9 0%, #dcedc8 100%);
    }

        .bg-lime .media-icon {
            background: #8bc34a;
            color: #fff;
        }

    /* Satır 4 İçin Özel Yeni Renkler */
    .bg-amber {
        background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
    }

        .bg-amber .media-icon {
            background: #ffa000;
            color: #fff;
        }

    .bg-navy {
        background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
    }

        .bg-navy .media-icon {
            background: #01579b;
            color: #fff;
        }

    .bg-emerald {
        background: linear-gradient(135deg, #e0f2f1 0%, #a7ffeb 100%);
    }

        .bg-emerald .media-icon {
            background: #00bfa5;
            color: #fff;
        }

    .bg-deep-orange {
        background: linear-gradient(135deg, #fbe9e7 0%, #ffccbc 100%);
    }

        .bg-deep-orange .media-icon {
            background: #ff5722;
            color: #fff;
        }
</style>

<section class="content container-fluid">
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-purple">
                <div class="media-icon pull-left"><i class="fa fa-copyright"></i></div>
                <div class="media-info">
                    <h5>Toplam Marka Sayısı</h5>
                    <h3>@ViewBag.BrandCount Marka</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-orange">
                <div class="media-icon pull-left"><i class="fa fa-list-alt"></i></div>
                <div class="media-info">
                    <h5>Toplam Kategori Sayısı</h5>
                    <h3>@ViewBag.CategoryCount Kategori</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-blue">
                <div class="media-icon pull-left"><i class="fa fa-cube"></i></div>
                <div class="media-info">
                    <h5>Toplam Ürün Sayısı</h5>
                    <h3>@ViewBag.ProductCount Ürün</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-green">
                <div class="media-icon pull-left"><i class="fa-solid fa-sack-dollar"></i></div>
                <div class="media-info">
                    <h5>Ortalama Ürün Fiyat</h5>
                    <h3>@ViewBag.ProductAvgPrice ₺</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-red">
                <div class="media-icon pull-left"><i class="fa fa-arrow-up"></i></div>
                <div class="media-info">
                    <h5>En Pahalı Ürün</h5>
                    <h3>@ViewBag.MaxPriceProductName</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-teal">
                <div class="media-icon pull-left"><i class="fa fa-arrow-down"></i></div>
                <div class="media-info">
                    <h5>En Ucuz Ürün</h5>
                    <h3>@ViewBag.MinPriceProductName</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-indigo">
                <div class="media-icon pull-left"><i class="fa fa-check-circle"></i></div>
                <div class="media-info">
                    <h5>Aktif Yorum Sayısı</h5>
                    <h3>@ViewBag.ActiveCommentCount Yorum</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-pink">
                <div class="media-icon pull-left"><i class="fa fa-times-circle"></i></div>
                <div class="media-info">
                    <h5>Passive Yorum Sayısı</h5>
                    <h3>@ViewBag.PassiveCommentCount Yorum</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-cyan">
                <div class="media-icon pull-left"><i class="fa fa-comments"></i></div>
                <div class="media-info">
                    <h5>Toplam Yorum Sayısı</h5>
                    <h3>@ViewBag.TotalCommentCount Yorum</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-yellow">
                <div class="media-icon pull-left"><i class="fa fa-envelope"></i></div>
                <div class="media-info">
                    <h5>Toplam Mesaj Sayısı</h5>
                    <h3>@ViewBag.TotalMessageCount Mesaj</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-dark">
                <div class="media-icon pull-left"><i class="fa fa-star"></i></div>
                <div class="media-info">
                    <h5>Toplam Kupon Sayısı</h5>
                    <h3>@ViewBag.TotalCouponCount Kupon</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-lime">
                <div class="media-icon pull-left"><i class="fa-solid fa-users"></i></div>
                <div class="media-info">
                    <h5>Toplam Kullanıcı Sayısı</h5>
                    <h3>@ViewBag.TotalUserCount Kullanıcı</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-amber">
                <div class="media-icon pull-left"><i class="fa fa-money-bill-wave"></i></div>
                <div class="media-info">
                    <h5>Toplam Sipariş Tutarı</h5>
                    <h3>@ViewBag.TotalOrderPriceCount.ToString("N0") ₺</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-navy">
                <div class="media-icon pull-left"><i class="fa fa-truck"></i></div>
                <div class="media-info">
                    <h5>Toplam Kargo Şirketi</h5>
                    <h3>@ViewBag.TotalCargoCompanyCount Şirket</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-emerald">
                <div class="media-icon pull-left"><i class="fa fa-calendar-alt"></i></div>
                <div class="media-info">
                    <h5>Son Sipariş Tarihi</h5>
                    <h3>@(((DateTime)ViewBag.LastOrderDate).ToString("dd.MM.yyyy"))</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="media-box bg-deep-orange">
                <div class="media-icon pull-left"><i class="fa fa-percentage"></i></div>
                <div class="media-info">
                    <h5>Toplam İndirim Sayısı</h5>
                    <h3>@ViewBag.TotalDiscountCount İndirim</h3>
                </div>
            </div>
        </div>
    </div>
</section>