@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Areas/Admin/Views/AdminUILayout/UILayout.cshtml";
    int count = 0;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body { font-family: 'Inter', sans-serif; background-color: #fcfcfd; }

    .main-container { padding: 40px; }

    /* Üst Başlık Alanı */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .header-section h2 {
        font-weight: 700;
        color: #101828;
        margin: 0;
        letter-spacing: -0.5px;
    }

    /* Modern Cam (Glass) Efektli Tablo Kartı */
    .table-wrapper {
        background: #ffffff;
        border: 1px solid #eaecf0;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0px 1px 2px rgba(16, 24, 40, 0.05);
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

    .modern-table thead {
        background-color: #f9fafb;
        border-bottom: 1px solid #eaecf0;
    }

    .modern-table th {
        padding: 12px 24px;
        text-align: left;
        font-size: 12px;
        font-weight: 600;
        color: #667085;
        text-transform: uppercase;
    }

    .modern-table tbody tr {
        transition: background 0.2s ease;
        border-bottom: 1px solid #f2f4f7;
    }

    .modern-table tbody tr:hover { background-color: #f9fafb; }

    .modern-table td {
        padding: 16px 24px;
        vertical-align: middle;
        color: #475467;
        font-size: 14px;
    }

    /* Ürün ve Fiyat Vurgusu */
    .product-name { font-weight: 600; color: #101828; display: block; }
    .product-price {
        font-weight: 700;
        color: #039855;
        background: #ecfdf3;
        padding: 4px 10px;
        border-radius: 6px;
    }
    .category-badge {
        background: #f2f4f7;
        color: #344054;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
    }

    /* Aksiyon Butonları */
    .btn-action {
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        border: none;
    }

    .btn-details { background: #f9f5ff; color: #6941c6; }
    .btn-details:hover { background: #f4ebff; }

    .btn-images { background: #fffaeb; color: #b54708; }
    .btn-images:hover { background: #fef0c7; }

    .btn-edit { background: #eff4ff; color: #444ce7; }
    .btn-edit:hover { background: #d1e0ff; }

    .btn-delete { background: #fef3f2; color: #b42318; }
    .btn-delete:hover { background: #fee4e2; }

    .btn-add-new {
        background: #7f56d9;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 600;
    }
    .btn-add-new:hover { background: #6941c6; color: white; }

    .index-badge { color: #98a2b3; font-weight: 500; }
</style>

<div class="main-container">
    <div class="header-section">
        <div>
            <h2>Ürün Portföyü</h2>
            <p style="color: #667085; margin: 5px 0 0 0;">Mağazanızdaki ürünleri, fiyatları ve içerikleri buradan yönetin.</p>
        </div>
        <a href="/Admin/Product/AddProduct" class="btn btn-add-new">
            <i class="fa fa-plus"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="table-wrapper">
        <div class="table-responsive">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Ürün Bilgisi</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>İçerik Yönetimi</th>
                        <th style="text-align: right;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="index-badge">#@count.ToString("D2")</td>
                            <td>
                                <span class="product-name">@item.ProductName</span>
                            </td>
                            <td>
                                <span class="category-badge">@item.CategoryName</span>
                            </td>
                            <td>
                                <span class="product-price">@item.ProductPrice.ToString("N2") ₺</span>
                            </td>
                            <td>
                                <div style="display: flex; gap: 8px;">
                                    <a href="/Admin/ProductImage/UpdateProductImage?productId=@item.ProductId" class="btn-action btn-images" title="Görseller">
                                        <i class="fa fa-image"></i> Görseller
                                    </a>
                                    <a href="/Admin/ProductDetail/UpdateProductDetail?productId=@item.ProductId" class="btn-action btn-details" title="Açıklama">
                                        <i class="fa fa-info"></i> Detaylar
                                    </a>
                                </div>
                            </td>
                            <td style="text-align: right;">
                                <div style="display: flex; justify-content: flex-end; gap: 8px;">
                                    <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn-action btn-edit">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="/Admin/Product/RemoveProduct/@item.ProductId" class="btn-action btn-delete" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?')">
                                        <i class="fa fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>