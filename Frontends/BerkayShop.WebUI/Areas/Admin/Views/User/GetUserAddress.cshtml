@model GetCargoCustomerByUserIdDto
@{
    ViewData["Title"] = "GetUserAddress";
    Layout = "~/Areas/Admin/Views/AdminUILayout/UILayout.cshtml";
}
<style>
        .profile-card {
                max-width: 700px;
                margin: 50px auto;
                padding: 30px;
                border-radius: 15px;
                background: #ffffff;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                font-family: 'Segoe UI', sans-serif;

    }

        .profile-header {
                background: linear-gradient(90deg, #00c6ff, #0072ff);
                color: white;
                padding: 20px;
                border-radius: 15px 15px 0 0;
                text-align: center;
                font-size: 1.5rem;
                font-weight: 600;
                margin: -30px -30px 30px -30px;

    }
        .profile-info {
                margin-bottom: 10px;
                display: flex;
                align-items: center;

    }
            .profile-info i {
                    color: #0072ff;
                    margin-right: 10px;
                    font-size: 1.5rem;
                    min-width: 24px;
                    text-align: center;

    }
        .profile-label {
                font-weight: 600;
                margin-right: 5px;
                color: #555;
                min-width: 120px;
                font-size: 1.5rem;

    }
        .profile-value {
                color: #333;
                font-size: 1.5rem;

    }
        .divider {
                border-top: 1px solid #eee;
                margin: 15px 0;
    }
</style>

<section class="content container-fluid">
    <div class="profile-card">
        <div class="profile-header">
            <i class="fa fa-user-circle me-2"></i> Kullanıcı Profil Bilgileri
        </div>

        <div class="profile-info">
            <i class="fa fa-id-card"></i>
            <span class="profile-label">Kullanıcı ID:</span>
            <span class="profile-value">@Model.cargoCustomerId</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-user"></i>
            <span class="profile-label">Ad Soyad:</span>
            <span class="profile-value">@Model.name @Model.surname</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-envelope"></i>
            <span class="profile-label">Email:</span>
            <span class="profile-value">@Model.email</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-phone"></i>
            <span class="profile-label">Telefon:</span>
            <span class="profile-value">@Model.phone</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-map-marker-alt"></i>
            <span class="profile-label">İlçe / Şehir:</span>
            <span class="profile-value">@Model.district / @Model.city</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-home"></i>
            <span class="profile-label">Adres:</span>
            <span class="profile-value">@Model.address</span>
        </div>
    </div>
</section> 