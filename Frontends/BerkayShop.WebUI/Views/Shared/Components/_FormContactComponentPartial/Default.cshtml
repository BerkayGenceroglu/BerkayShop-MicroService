@model CreateContactDto

<div class="col-lg-7 mb-5">
    <div class="contact-form bg-light p-30">
        <div id="success"></div>
        <form method="post"  asp-controller="Contact" asp-action="SendMessage" >
            <div class="control-group">
                <input type="text" class="form-control" id="name" placeholder="İsim-Soyisim Giriniz"
                       required="required" asp-for="NameSurname" data-validation-required-message="Lütfen Boş Geçmeyiniz" />
            </div>
            <p class="help-block text-danger"></p>
            <div class="control-group">
                <input type="email" class="form-control" id="email" placeholder="Mailinizi Giriniz"
                       required="required" asp-for="Email" data-validation-required-message="Lütfen Boş Geçmeyiniz" />
            </div>
            <p class="help-block text-danger"></p>
            <div class="control-group">
                <input type="text" class="form-control" id="subject" placeholder="Konu Giriniz"
                       required="required" asp-for="Subject" data-validation-required-message="Lütfen Boş Geçmeyiniz" />
            </div>
            <p class="help-block text-danger"></p>
            <div class="control-group">
                <textarea class="form-control" rows="8" id="message" placeholder="Mesajınızı Giriniz"
                          required="required"
                          asp-for="Message" data-validation-required-message="Lütfen Boş Geçmeyiniz"></textarea>
            </div>
            <p class="help-block text-danger"></p>
            <div>
                <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                    Mesaj Gönder
                </button>
            </div>
        </form>
    </div>
</div>
