@model CreateOrderAddressDto

<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
    <div class="bg-light p-30 mb-5">
        <form method="post" asp-controller="Order" asp-action="CreateOrderAddress">
        <div class="row">
            <div class="col-md-6 form-group">
                <label>Adınız</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Adınız">
            </div>
            <div class="col-md-6 form-group">
                <label>Soyadınız</label>
                <input class="form-control" type="text" asp-for="Surname" placeholder="Soyadınız">
            </div>
            <div class="col-md-6 form-group">
                <label>E-mail</label>
                <input class="form-control" type="text" asp-for="Email" placeholder="örnek@email.com">
            </div>
            <div class="col-md-6 form-group">
                <label>Mobile No</label>
                <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 456 789 00">
            </div>
            <div class="col-md-6 form-group">
                <label>Address Line 1</label>
                <input class="form-control" type="text" asp-for="Detail1" placeholder="Address Giriş 1">
            </div>
            <div class="col-md-6 form-group">
                <label>Address Line 2</label>
                <input class="form-control" type="text" asp-for="Detail2" placeholder="Address Giriş 2">
            </div>
            <div class="col-md-6 form-group">
                <label>Ülke</label>
                <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
            </div>
            <div class="col-md-6 form-group">
                <label>City</label>
                <input class="form-control" type="text" asp-for="City" placeholder="İzmir">
            </div>
            <div class="col-md-6 form-group">
                <label>İlçe</label>
                <input class="form-control" type="text" asp-for="District" placeholder="Buca">
            </div>
            <div class="col-md-6 form-group">
                <label>Alan Kodu</label>
                <input class="form-control" type="text" asp-for="ZipCode" placeholder="Alan Kodu">
            </div>
            <div class="col-md-12 form-group">
                <label>Eklemek İstedikleriniz</label>
                <textarea rows="4" class="form-control" type="text" asp-for="Description" placeholder="Açıklama,Ek,Not Yaz"></textarea>
            </div>
            <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Bilgileri Kaydet</button>
        </div>
        </form>
    </div>
</div>
