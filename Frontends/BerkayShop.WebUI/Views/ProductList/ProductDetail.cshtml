@model string
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProductImageSliderProductDetailComponentPartial", new { productId = Model })

        @await Component.InvokeAsync("_ProductFeatureProductDetailComponentPartial",new { productId = Model })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgi</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial", new { productId = Model })

                    @await Component.InvokeAsync("_InformationProductDetailComponentPartial", new { productId = Model })

                    @await Component.InvokeAsync("_ReviewsProductDetailComponentPartial", new { productId = Model })

                </div>
            </div>
        </div>
    </div>
</div>
